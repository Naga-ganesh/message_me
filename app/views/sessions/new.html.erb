<h2 class="ui icon center aligned header">
  <div class="content">
    Welcome to MessageMe - a complete ChatApp
  </div>
  <i class="orange power off icon"></i>
  <div class="sub header">Login to continue</div>
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    
      <%= form_with(model: @sessions,url: login_path, method: :post, local: true, class: 'ui form') do |form| %>
        <div class="field">
          <%= form.label :username %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: 'Username' %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= form.label :password %>
          <div class="ui left icon input">
            <%= form.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit "Login", class: "ui blue submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>

